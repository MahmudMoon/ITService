<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:checked="false"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_base_item_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/admin" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_base_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Demo Name"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_base_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seleted Quantity: 25"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btn_add_count_cart"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:background="@drawable/plus"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_height="30dp"
                />
            <View
                android:layout_width="10dp"
                android:layout_height="5dp"/>
            <ImageButton
                android:id="@+id/btn_substract_count_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/minus"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>